<form name="{{recordId}}" method="post"
      action="/cms/contents/save/{{entityId}}{{#if recordId}}/{{recordId}}{{/if}}"

      enctype="multipart/form-data">
    <header class="contents__header">
        <h2 class="contents-title">{{name}}</h2>
        <div class="actions">
            <button type="submit" title="Salva le modifiche">SAVE</button>
            <a href="/cms/contents" title="torna ai contenuti">BACK</a>
        </div>
    </header>
    <section class="contents">
        <!--<input type="hidden" name="entityId" value="{{entityId}}">-->
        <!--{{#if recordId}}-->
            <!--<input type="hidden" name="recordId" value="{{recordId}}">-->
        <!--{{/if}}-->
        <div class="fields">
            {{#fields}}
                {{> field-builder this}}
            {{/fields}}

        </div>
    </section>
    <section class="seo-ctr">
        <div class="fields">
            {{#seo.fields}}
                {{> field-builder this}}
            {{/seo.fields}}

        </div>
    </section>
</form>